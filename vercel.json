{
  "builds": [
    {
      "src": "api/wsgi.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "api/wsgi.py"
    }
  ],
  "env": {
    "DJANGO_SETTINGS_MODULE": "api.settings"
  },
  "crons": [
    {
      "path": "/api/tasks/send-24h-reminders",
      "schedule": "*/5 * * * *"
    },
    {
      "path": "/api/tasks/send-daily-schedule",
      "schedule": "0 12 * * *"
    }
  ]
}
